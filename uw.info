name = UW
description = UW Drupal Theme
version = 7.x-0.9
core = 7.x
base theme = bootstrap

; Bootstrap javascripts
scripts[] = 'bootstrap/js/bootstrap.min.js'

scripts[] = js/alert.js
scripts[] = js/branding.js
scripts[] = js/navigation.js
scripts[] = js/misc.js
scripts[] = js/search.js
scripts[] = js/weather.js

modernizr[Modernizr.touch][nope][] = js/bootstrap-hover-dropdown.min.js

; Disable the CDN as we are using our own source files.
settings[cdn_bootstrap] = 0

; Bootstrap source
stylesheets[all][] = bootstrap/css/bootstrap.css
stylesheets[all][] = bootstrap/css/bootstrap-responsive.css

stylesheets[all][] = css/uw.css
stylesheets[print][] = css/print.css

regions[help] = Help
regions[dropdowns] = Dropdowns
regions[sidebar_first] = Right sidebar
regions[content] = Content
regions[header] = Header
regions[footer_nav] = Footer Nav

settings[patch_color] = gold
settings[band_color] = purple
settings[show_patch] = 1
settings[show_search] = 1
settings[search_default_site] = this site
settings[sidebar_location] = right
settings[default_header] = 1
settings[toggle_secondary_menu] = 0
